            <textarea name="content" rows="8" placeholder="‡∏û‡∏¥‡∏°‡∏û‡πå‡∏Ç‡πâ‡∏≠‡∏Ñ‡∏ß‡∏≤‡∏°‡∏ó‡∏µ‡πà‡∏ô‡∏µ‡πà..." class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500"></textarea>
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">‡∏´‡∏°‡∏ß‡∏î‡∏´‡∏°‡∏π‡πà</label>
            <select name="category" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500"><option value="">‡πÄ‡∏•‡∏∑‡∏≠‡∏Å‡∏´‡∏°‡∏ß‡∏î‡∏´‡∏°‡∏π‡πà</option></select>
          </div>
        </div>
        <div class="p-4 border-t flex space-x-2">
          <button type="button" data-action="close-modal" class="flex-1 px-4 py-2 border border-gray-300 rounded-lg hover:bg-gray-50">‡∏¢‡∏Å‡πÄ‡∏•‡∏¥‡∏Å</button>
          <button type="submit" class="flex-1 px-4 py-2 bg-blue-500 hover:bg-blue-600 text-white rounded-lg">‡∏ö‡∏±‡∏ô‡∏ó‡∏∂‡∏Å</button>
        </div>
      </form>
    </div>
  </div>

  <div id="categoryModal" class="fixed inset-0 bg-black bg-opacity-50 hidden z-50 flex items-center justify-center p-4">
    <div class="bg-white rounded-lg w-full max-w-md slide-in">
      <div class="p-4 border-b"><h2 class="text-lg font-semibold">‡∏à‡∏±‡∏î‡∏Å‡∏≤‡∏£‡∏´‡∏°‡∏ß‡∏î‡∏´‡∏°‡∏π‡πà</h2></div>
      <div class="p-4">
        <form id="addCategoryForm" class="flex space-x-2 mb-4">
          <input name="name" type="text" placeholder="‡∏ä‡∏∑‡πà‡∏≠‡∏´‡∏°‡∏ß‡∏î‡∏´‡∏°‡∏π‡πà‡πÉ‡∏´‡∏°‡πà" required class="flex-1 px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500">
          <button type="submit" class="bg-green-500 hover:bg-green-600 text-white px-4 py-2 rounded-lg">‡πÄ‡∏û‡∏¥‡πà‡∏°</button>
        </form>
        <div class="text-xs text-gray-500 mb-2">‡∏•‡∏≤‡∏Å ‚†ø ‡πÄ‡∏û‡∏∑‡πà‡∏≠‡∏à‡∏±‡∏î‡∏•‡∏≥‡∏î‡∏±‡∏ö, üé® ‡πÄ‡∏û‡∏∑‡πà‡∏≠‡πÄ‡∏•‡∏∑‡∏≠‡∏Å‡∏™‡∏µ, ‚úèÔ∏è ‡πÄ‡∏û‡∏∑‡πà‡∏≠‡πÅ‡∏Å‡πâ‡∏ä‡∏∑‡πà‡∏≠, üóëÔ∏è ‡πÄ‡∏û‡∏∑‡πà‡∏≠‡∏•‡∏ö</div>
        <div id="categoriesList" class="space-y-2 max-h-72 overflow-y-auto"></div>
      </div>
      <div class="p-4 border-t"><button data-action="close-modal" class="w-full px-4 py-2 bg-gray-500 hover:bg-gray-600 text-white rounded-lg">‡∏õ‡∏¥‡∏î</button></div>
    </div>
  </div>

  <div id="deleteModal" class="fixed inset-0 bg-black bg-opacity-50 hidden z-50 flex items-center justify-center p-4">
    <div class="bg-white rounded-lg w-full max-w-sm slide-in">
      <div class="p-4 text-center">
        <div class="text-4xl mb-4">‚ö†Ô∏è</div>
        <h3 class="text-lg font-semibold mb-2">‡∏¢‡∏∑‡∏ô‡∏¢‡∏±‡∏ô‡∏Å‡∏≤‡∏£‡∏•‡∏ö</h3>
        <p id="deleteMessage" class="text-gray-600 mb-4 break-words">‡∏Ñ‡∏∏‡∏ì‡πÅ‡∏ô‡πà‡πÉ‡∏à‡∏´‡∏£‡∏∑‡∏≠‡πÑ‡∏°‡πà‡∏ó‡∏µ‡πà‡∏à‡∏∞‡∏•‡∏ö‡∏£‡∏≤‡∏¢‡∏Å‡∏≤‡∏£‡∏ô‡∏µ‡πâ?</p>
        <div class="flex space-x-2">
          <button data-action="close-modal" class="flex-1 px-4 py-2 border border-gray-300 rounded-lg hover:bg-gray-50">‡∏¢‡∏Å‡πÄ‡∏•‡∏¥‡∏Å</button>
          <button id="confirmDeleteBtn" class="flex-1 px-4 py-2 bg-red-500 hover:bg-red-600 text-white rounded-lg">‡∏•‡∏ö</button>
        </div>
      </div>
    </div>
  </div>

  <div id="toastContainer" class="fixed top-20 right-4 z-50 space-y-2"></div>

  <script>
    class MessageApp {
      constructor() {
        this.state = this.loadState();
        this.currentEditId = null;
        this.deleteTarget = null;
        this.sortableMessages = null;
        this.sortableCategories = null;
        this.debouncedRender = this.debounce(() => this.render(), 300);
        this.init();
      }

      getDefaultState() {
        const COLOR_PALETTE = ["#FF6B6B", "#4ECDC4", "#45B7D1", "#F7B801", "#845EC2", "#D65DB1", "#FF9671", "#008F7A"];
        return {
          messages: [],
          categories: ['‡∏á‡∏≤‡∏ô', '‡∏™‡πà‡∏ß‡∏ô‡∏ï‡∏±‡∏ß', '‡πÑ‡∏≠‡πÄ‡∏î‡∏µ‡∏¢', '‡∏™‡∏≥‡∏Ñ‡∏±‡∏ç'].map((name, i) => ({
            id: Date.now() + i, name, color: COLOR_PALETTE[i % COLOR_PALETTE.length]
          })),
          settings: { messageFontSize: 16, categoryTagFontSize: 12 },
          activeCategory: '', searchTerm: ''
        };
      }

      loadState() {
        try {
          const storedState = localStorage.getItem('messageAppData');
          return storedState ? JSON.parse(storedState) : this.getDefaultState();
        } catch (e) {
          console.error("Failed to load state", e);
          return this.getDefaultState();
        }
      }

      saveState() {
        try {
          localStorage.setItem('messageAppData', JSON.stringify(this.state));
        } catch (e) {
          console.error("Failed to save state", e);
          this.showToast('‡πÑ‡∏°‡πà‡∏™‡∏≤‡∏°‡∏≤‡∏£‡∏ñ‡∏ö‡∏±‡∏ô‡∏ó‡∏∂‡∏Å‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•‡πÑ‡∏î‡πâ', 'error');
        }
      }

      init() {
        this.bindEvents();
        this.render();
      }

      bindEvents() {
        document.body.addEventListener('click', this.handleAction.bind(this));
        document.getElementById('messageForm').addEventListener('submit', this.saveMessage.bind(this));
        document.getElementById('addCategoryForm').addEventListener('submit', this.addCategory.bind(this));
        document.getElementById('searchInput').addEventListener('input', this.handleSearchInput.bind(this));
        document.getElementById('importInput').addEventListener('change', this.importJSON.bind(this));
        document.getElementById('messageFontSizeSlider').addEventListener('input', e => this.updateSetting('messageFontSize', e.target.value));
        document.getElementById('categoryTagFontSizeSlider').addEventListener('input', e => this.updateSetting('categoryTagFontSize', e.target.value));
      }

      handleAction(e) {
        const target = e.target.closest('[data-action]');
        if (!target) return;
        e.preventDefault();

        const { action, id, name } = target.dataset;
        const messageId = id ? parseInt(id, 10) : null;
        
        const actions = {
          'add-message': () => this.openMessageModal(),
          'edit-message': () => this.openMessageModal(messageId),
          'delete-message': () => this.confirmDelete('message', messageId),
          'toggle-pin': () => this.togglePin(messageId),
          'copy-message': () => this.copyMessageById(messageId, target),
          'copy-all': () => this.copyAllMessages(),
          'export': () => this.exportJSON(),
          'open-category-modal': () => this.openModal('categoryModal'),
          'edit-category': () => this.editCategory(name),
          'delete-category': () => this.confirmDelete('category', name),
          'select-category': () => this.setActiveCategory(name),
          'open-settings-modal': () => this.openModal('settingsModal'),
          'close-modal': () => this.closeAllModals(),
        };

        if (actions[action]) actions[action]();
      }

      saveMessage(e) {
        e.preventDefault();
        const formData = new FormData(e.target);
        const content = formData.get('content').trim();
        const category = formData.get('category');
        if (!content) return this.showToast('‡∏Å‡∏£‡∏∏‡∏ì‡∏≤‡∏Å‡∏£‡∏≠‡∏Å‡∏Ç‡πâ‡∏≠‡∏Ñ‡∏ß‡∏≤‡∏°', 'warning');
        
        if (this.currentEditId) {
            const index = this.state.messages.findIndex(m => m.id === this.currentEditId);
            if (index !== -1) {
                this.state.messages[index] = { ...this.state.messages[index], content, category };
                this.showToast('‡πÅ‡∏Å‡πâ‡πÑ‡∏Ç‡∏Ç‡πâ‡∏≠‡∏Ñ‡∏ß‡∏≤‡∏°‡∏™‡∏≥‡πÄ‡∏£‡πá‡∏à');
            }
        } else {
            this.state.messages.unshift({ id: Date.now(), content, category, pinned: false });
            this.showToast('‡πÄ‡∏û‡∏¥‡πà‡∏°‡∏Ç‡πâ‡∏≠‡∏Ñ‡∏ß‡∏≤‡∏°‡∏™‡∏≥‡πÄ‡∏£‡πá‡∏à');
        }
        
        this.currentEditId = null;
        this.closeAllModals();
        this.saveState();
        this.render();
      }

      togglePin(id) {
        const message = this.state.messages.find(m => m.id === id);
        if (message) {
            message.pinned = !message.pinned;
            this.showToast(message.pinned ? '‡∏õ‡∏±‡∏Å‡∏´‡∏°‡∏∏‡∏î‡∏Ç‡πâ‡∏≠‡∏Ñ‡∏ß‡∏≤‡∏°‡πÅ‡∏•‡πâ‡∏ß' : '‡∏¢‡∏Å‡πÄ‡∏•‡∏¥‡∏Å‡∏Å‡∏≤‡∏£‡∏õ‡∏±‡∏Å‡∏´‡∏°‡∏∏‡∏î');
            this.saveState();
            this.render();
        }
      }

      addCategory(e) {
        e.preventDefault();
        const name = new FormData(e.target).get('name').trim();
        if (!name) return this.showToast('‡∏Å‡∏£‡∏∏‡∏ì‡∏≤‡∏Å‡∏£‡∏≠‡∏Å‡∏ä‡∏∑‡πà‡∏≠‡∏´‡∏°‡∏ß‡∏î‡∏´‡∏°‡∏π‡πà', 'warning');
        if (this.state.categories.some(c => c.name === name)) return this.showToast('‡∏´‡∏°‡∏ß‡∏î‡∏´‡∏°‡∏π‡πà‡∏ô‡∏µ‡πâ‡∏°‡∏µ‡∏≠‡∏¢‡∏π‡πà‡πÅ‡∏•‡πâ‡∏ß', 'warning');

        const COLOR_PALETTE = ["#FF6B6B", "#4ECDC4", "#45B7D1", "#F7B801", "#845EC2", "#D65DB1", "#FF9671", "#008F7A"];
        const color = COLOR_PALETTE[this.state.categories.length % COLOR_PALETTE.length];
        this.state.categories.push({ id: Date.now(), name, color });

        e.target.reset();
        this.saveState();
        this.render();
        this.showToast('‡πÄ‡∏û‡∏¥‡πà‡∏°‡∏´‡∏°‡∏ß‡∏î‡∏´‡∏°‡∏π‡πà‡∏™‡∏≥‡πÄ‡∏£‡πá‡∏à');
      }

      editCategory(oldName) {
        const newName = prompt('‡πÅ‡∏Å‡πâ‡πÑ‡∏Ç‡∏ä‡∏∑‡πà‡∏≠‡∏´‡∏°‡∏ß‡∏î‡∏´‡∏°‡∏π‡πà', oldName);
        if (!newName || newName.trim() === oldName) return;
        const trimmed = newName.trim();
        if (this.state.categories.some(c => c.name === trimmed)) return this.showToast('‡∏°‡∏µ‡∏´‡∏°‡∏ß‡∏î‡∏´‡∏°‡∏π‡πà‡∏ô‡∏µ‡πâ‡∏≠‡∏¢‡∏π‡πà‡πÅ‡∏•‡πâ‡∏ß', 'warning');
        
        const category = this.state.categories.find(c => c.name === oldName);
        if (category) category.name = trimmed;
        this.state.messages.forEach(m => { if (m.category === oldName) m.category = trimmed; });
        if (this.state.activeCategory === oldName) this.state.activeCategory = trimmed;

        this.saveState();
        this.render();
        this.showToast(`‡πÄ‡∏õ‡∏•‡∏µ‡πà‡∏¢‡∏ô‡∏ä‡∏∑‡πà‡∏≠‡∏´‡∏°‡∏ß‡∏î‡∏´‡∏°‡∏π‡πà‡πÄ‡∏õ‡πá‡∏ô "${trimmed}" ‡∏™‡∏≥‡πÄ‡∏£‡πá‡∏à`);
      }

      updateCategoryColor(id, color) {
        const category = this.state.categories.find(c => c.id === id);
        if (category) {
            category.color = color;
            this.saveState();
            this.render();
        }
      }

      confirmDelete(type, id) {
          this.deleteTarget = { type, id };
          let message = "‡∏Ñ‡∏∏‡∏ì‡πÅ‡∏ô‡πà‡πÉ‡∏à‡∏´‡∏£‡∏∑‡∏≠‡πÑ‡∏°‡πà‡∏ó‡∏µ‡πà‡∏à‡∏∞‡∏•‡∏ö‡∏£‡∏≤‡∏¢‡∏Å‡∏≤‡∏£‡∏ô‡∏µ‡πâ?";
          if (type === 'message') {
              const msg = this.state.messages.find(m => m.id === id);
              const preview = msg.content.length > 50 ? msg.content.slice(0, 50) + '...' : msg.content;
              message = `‡∏Ñ‡∏∏‡∏ì‡πÅ‡∏ô‡πà‡πÉ‡∏à‡∏´‡∏£‡∏∑‡∏≠‡πÑ‡∏°‡πà‡∏ó‡∏µ‡πà‡∏à‡∏∞‡∏•‡∏ö‡∏Ç‡πâ‡∏≠‡∏Ñ‡∏ß‡∏≤‡∏°: "${this.escapeHtml(preview)}"?`;
          } else if (type === 'category') {
              message = `‡∏Ñ‡∏∏‡∏ì‡πÅ‡∏ô‡πà‡πÉ‡∏à‡∏´‡∏£‡∏∑‡∏≠‡πÑ‡∏°‡πà‡∏ó‡∏µ‡πà‡∏à‡∏∞‡∏•‡∏ö‡∏´‡∏°‡∏ß‡∏î‡∏´‡∏°‡∏π‡πà "${this.escapeHtml(id)}"? ‡∏Ç‡πâ‡∏≠‡∏Ñ‡∏ß‡∏≤‡∏°‡πÉ‡∏ô‡∏´‡∏°‡∏ß‡∏î‡∏ô‡∏µ‡πâ‡∏à‡∏∞‡πÑ‡∏°‡πà‡∏°‡∏µ‡∏´‡∏°‡∏ß‡∏î‡∏´‡∏°‡∏π‡πà`;
          }
          document.getElementById('deleteMessage').innerHTML = message;
          document.getElementById('confirmDeleteBtn').onclick = () => this.executeDelete();
          this.openModal('deleteModal');
      }

      executeDelete() {
        const { type, id } = this.deleteTarget;
        if (type === 'message') {
            this.state.messages = this.state.messages.filter(m => m.id !== id);
        } else if (type === 'category') {
            this.state.categories = this.state.categories.filter(c => c.name !== id);
            this.state.messages.forEach(m => { if (m.category === id) m.category = ''; });
            if (this.state.activeCategory === id) this.state.activeCategory = '';
        }
        this.showToast('‡∏•‡∏ö‡∏£‡∏≤‡∏¢‡∏Å‡∏≤‡∏£‡∏™‡∏≥‡πÄ‡∏£‡πá‡∏à');
        this.closeAllModals();
        this.saveState();
        this.render();
      }

      setActiveCategory(name) {
        this.state.activeCategory = name;
        this.saveState();
        this.render();
      }

      updateSetting(key, value) {
        this.state.settings[key] = Number(value);
        this.saveState();
        this.render();
      }
      
      handleSearchInput(e) {
        this.state.searchTerm = e.target.value;
        this.saveState();
        this.debouncedRender();
      }

      render() {
        this.applySettings();
        this.renderCategoryChips();
        this.renderMessages();
        this.renderCategoriesList();
        this.initDragAndDrop();
      }

      applySettings() {
        const { messageFontSize, categoryTagFontSize } = this.state.settings;
        document.documentElement.style.setProperty('--message-font-size', `${messageFontSize}px`);
        document.documentElement.style.setProperty('--category-tag-font-size', `${categoryTagFontSize}px`);
        document.getElementById('messageFontSizeSlider').value = messageFontSize;
        document.getElementById('messageFontSizeValue').textContent = messageFontSize;
        document.getElementById('categoryTagFontSizeSlider').value = categoryTagFontSize;
        document.getElementById('categoryTagFontSizeValue').textContent = categoryTagFontSize;
      }

      renderCategoryChips() {
        const container = document.getElementById('categoryChips');
        let html = `<button data-action="select-category" data-name="" class="${this.state.activeCategory === '' ? 'bg-sky-600 text-white' : 'bg-gray-100 text-gray-800'} px-5 py-3 rounded-full text-base border transition font-semibold">üìÇ ‡∏ó‡∏±‡πâ‡∏á‡∏´‡∏°‡∏î</button>`;
        html += this.state.categories.map(cat => {
            const isActive = this.state.activeCategory === cat.name;
            const textColor = this.getContrastingTextColor(cat.color);
            return `<button data-action="select-category" data-name="${this.escapeHtml(cat.name)}" 
                style="${isActive ? `background-color:${cat.color}; border-color:${cat.color}; color:${textColor};` : `color:${cat.color}; border-color:${cat.color};`}"
                class="px-5 py-3 rounded-full text-base border transition font-medium">${this.escapeHtml(cat.name)}</button>`;
        }).join('');
        container.innerHTML = html;
      }

      renderMessages() {
        const container = document.getElementById('messagesList');
        const term = this.state.searchTerm.toLowerCase();
        const catFilter = this.state.activeCategory;
        const isSearching = term.length > 0;

        let filtered = this.state.messages.filter(m => 
            (!catFilter || m.category === catFilter) &&
            (m.content.toLowerCase().includes(term))
        );

        if (!isSearching) {
            filtered.sort((a, b) => (b.pinned ? 1 : 0) - (a.pinned ? 1 : 0));
        }

        if (filtered.length === 0) {
            container.innerHTML = `<div class="text-center py-12 text-gray-500"><div class="text-4xl mb-4">üìù</div><p>‡πÑ‡∏°‡πà‡∏û‡∏ö‡∏Ç‡πâ‡∏≠‡∏Ñ‡∏ß‡∏≤‡∏°</p></div>`;
            return;
        }

        container.innerHTML = filtered.map((m, index) => {
            const cat = this.state.categories.find(c => c.name === m.category);
            const bgColor = cat ? cat.color : '#A9A9A9';
            const textColor = this.getContrastingTextColor(bgColor);
            const rowBg = index % 2 === 0 ? 'bg-white' : 'bg-slate-50';
            const pinIcon = m.pinned ? 'üìå' : 'üìç';
            const pinTitle = m.pinned ? '‡∏¢‡∏Å‡πÄ‡∏•‡∏¥‡∏Å‡∏õ‡∏±‡∏Å‡∏´‡∏°‡∏∏‡∏î' : '‡∏õ‡∏±‡∏Å‡∏´‡∏°‡∏∏‡∏î';
            
            // Display as plain text
            const escapedContent = this.escapeHtml(m.content);

            return `
            <div class="${rowBg} rounded-lg shadow-sm border p-4 fade-in flex gap-2" data-id="${m.id}">
              ${!isSearching ? `<div class="drag-handle text-gray-400 text-xl self-center" title="‡∏•‡∏≤‡∏Å‡πÄ‡∏û‡∏∑‡πà‡∏≠‡∏à‡∏±‡∏î‡∏•‡∏≥‡∏î‡∏±‡∏ö">‚†ø</div>` : ''}
              <div class="flex-grow">
                <div class="flex items-center justify-between mb-3">
                    <span class="font-medium px-2 py-1 rounded-full text-sm" style="font-size: ${this.state.settings.categoryTagFontSize}px; background-color: ${bgColor}; color: ${textColor};">
                        ${this.escapeHtml(m.category || '‡πÑ‡∏°‡πà‡∏°‡∏µ‡∏´‡∏°‡∏ß‡∏î‡∏´‡∏°‡∏π‡πà')}
                    </span>
                    <div class="flex items-center space-x-1 ml-2 shrink-0">
                        <button data-action="toggle-pin" data-id="${m.id}" class="hover:bg-gray-200 rounded-full p-2 text-lg" title="${pinTitle}">${pinIcon}</button>
                        <button data-action="copy-message" data-id="${m.id}" class="text-green-600 hover:text-green-700 p-2 text-lg" title="‡∏Ñ‡∏±‡∏î‡∏•‡∏≠‡∏Å">üìã</button>
                        <button data-action="edit-message" data-id="${m.id}" class="text-blue-600 hover:text-blue-700 p-2 text-lg" title="‡πÅ‡∏Å‡πâ‡πÑ‡∏Ç">‚úèÔ∏è</button>
                        <button data-action="delete-message" data-id="${m.id}" class="text-red-600 hover:text-red-700 p-2 text-lg" title="‡∏•‡∏ö">üóëÔ∏è</button>
                    </div>
                </div>
                <p class="text-gray-800 leading-relaxed whitespace-pre-wrap break-words" style="font-size: ${this.state.settings.messageFontSize}px;">
                    ${escapedContent}
                </p>
              </div>
            </div>`;
        }).join('');
      }

      renderCategoriesList() {
        const container = document.getElementById('categoriesList');
        if (this.state.categories.length === 0) {
            container.innerHTML = `<div class="text-gray-500 text-center py-6">‡∏¢‡∏±‡∏á‡πÑ‡∏°‡πà‡∏°‡∏µ‡∏´‡∏°‡∏ß‡∏î‡∏´‡∏°‡∏π‡πà</div>`; return;
        }
        container.innerHTML = this.state.categories.map(c => `
            <div class="flex items-center justify-between bg-gray-50 px-3 py-2 rounded-lg" data-id="${c.id}">
                <div class="drag-handle text-gray-400 text-xl" title="‡∏•‡∏≤‡∏Å‡πÄ‡∏û‡∏∑‡πà‡∏≠‡∏à‡∏±‡∏î‡∏•‡∏≥‡∏î‡∏±‡∏ö">‚†ø</div>
                <input type="color" value="${this.escapeHtml(c.color)}" oninput="app.updateCategoryColor(${c.id}, this.value)" class="w-8 h-8 p-0 border-none rounded cursor-pointer mx-2" title="‡πÄ‡∏õ‡∏•‡∏µ‡πà‡∏¢‡∏ô‡∏™‡∏µ">
                <span class="text-gray-800 flex-1">${this.escapeHtml(c.name)}</span>
                <div class="flex gap-1 items-center">
                    <button data-action="edit-category" data-name="${this.escapeHtml(c.name)}" class="text-blue-600 hover:text-blue-800 p-2" title="‡πÅ‡∏Å‡πâ‡πÑ‡∏Ç‡∏ä‡∏∑‡πà‡∏≠">‚úèÔ∏è</button>
                    <button data-action="delete-category" data-name="${this.escapeHtml(c.name)}" class="text-red-600 hover:text-red-800 p-2" title="‡∏•‡∏ö‡∏´‡∏°‡∏ß‡∏î‡∏´‡∏°‡∏π‡πà">üóëÔ∏è</button>
                </div>
            </div>`).join('');
      }

      initDragAndDrop() {
        const isSearching = this.state.searchTerm.length > 0;
        const msgContainer = document.getElementById('messagesList');
        if (this.sortableMessages) this.sortableMessages.destroy();
        if (!isSearching) {
            this.sortableMessages = new Sortable(msgContainer, {
                animation: 150, handle: '.drag-handle', ghostClass: 'sortable-ghost',
                onEnd: (evt) => {
                    const { oldIndex, newIndex } = evt;
                    const [movedItem] = this.state.messages.splice(oldIndex, 1);
                    this.state.messages.splice(newIndex, 0, movedItem);
                    this.saveState();
                    this.render();
                }
            });
        }
        
        const catContainer = document.getElementById('categoriesList');
        if (this.sortableCategories) this.sortableCategories.destroy();
        this.sortableCategories = new Sortable(catContainer, {
            animation: 150, handle: '.drag-handle', ghostClass: 'sortable-ghost',
            onEnd: (evt) => {
                const { oldIndex, newIndex } = evt;
                const [movedItem] = this.state.categories.splice(oldIndex, 1);
                this.state.categories.splice(newIndex, 0, movedItem);
                this.saveState();
                this.render();
            }
        });
      }
      
      openMessageModal(id = null) {
          this.currentEditId = id;
          const form = document.getElementById('messageForm');
          form.reset();
          document.getElementById('modalTitle').textContent = id ? '‡πÅ‡∏Å‡πâ‡πÑ‡∏Ç‡∏Ç‡πâ‡∏≠‡∏Ñ‡∏ß‡∏≤‡∏°' : '‡πÄ‡∏û‡∏¥‡πà‡∏°‡∏Ç‡πâ‡∏≠‡∏Ñ‡∏ß‡∏≤‡∏°‡πÉ‡∏´‡∏°‡πà';
          const categorySelect = form.querySelector('[name="category"]');
          categorySelect.innerHTML = '<option value="">‡πÄ‡∏•‡∏∑‡∏≠‡∏Å‡∏´‡∏°‡∏ß‡∏î‡∏´‡∏°‡∏π‡πà</option>' + 
              this.state.categories.map(c => `<option value="${this.escapeHtml(c.name)}">${this.escapeHtml(c.name)}</option>`).join('');
          if (id) {
              const message = this.state.messages.find(m => m.id === id);
              if (message) {
                  form.querySelector('[name="content"]').value = message.content;
                  form.querySelector('[name="category"]').value = message.category || '';
              }
          }
          this.openModal('messageModal');
      }

      openModal(modalId) { document.getElementById(modalId).classList.remove('hidden'); }
      closeAllModals() { document.querySelectorAll('.fixed.inset-0').forEach(m => m.classList.add('hidden')); }

      showToast(message, type = 'success') {
        const toastContainer = document.getElementById('toastContainer');
        const toastId = 'toast-' + Date.now();
        const icons = { success:'‚úÖ', error:'‚ùå', info:'‚ÑπÔ∏è', warning:'‚ö†Ô∏è' };
        const colors = { success:'bg-green-500', error:'bg-red-500', info:'bg-blue-500', warning:'bg-yellow-500' };
        const toast = document.createElement('div');
        toast.id = toastId;
        toast.className = `toast ${colors[type]} text-white px-4 py-3 rounded-lg shadow-lg flex items-center space-x-2 max-w-sm`;
        toast.innerHTML = `<span class="text-lg">${icons[type]}</span><span class="flex-1 text-sm">${this.escapeHtml(message)}</span>`;
        toastContainer.appendChild(toast);
        setTimeout(()=> {
            const el = document.getElementById(toastId);
            if(el) { el.classList.add('toast-exit'); setTimeout(()=> el.remove(), 300); }
        }, 3000);
      }
      
      escapeHtml(text) {
        const p = document.createElement('p');
        p.textContent = text;
        return p.innerHTML;
      }
      
      getContrastingTextColor(hex) {
        if (!hex) return '#000000';
        const r = parseInt(hex.substr(1, 2), 16), g = parseInt(hex.substr(3, 2), 16), b = parseInt(hex.substr(5, 2), 16);
        return ((((r * 299) + (g * 587) + (b * 114)) / 1000) >= 128) ? '#000000' : '#FFFFFF';
      }
      
      debounce(func, delay) {
        let timeout;
        return (...args) => {
            clearTimeout(timeout);
            timeout = setTimeout(() => func.apply(this, args), delay);
        };
      }

      // NEW: More reliable copy function
      copyTextToClipboard(text, successMessage, buttonElement) {
        const textArea = document.createElement("textarea");
        textArea.value = text;
        textArea.style.position = "fixed";
        textArea.style.left = "-9999px";
        document.body.appendChild(textArea);
        textArea.focus();
        textArea.select();
        try {
            document.execCommand('copy');
            this.showToast(successMessage);
            if (buttonElement) {
                const originalContent = buttonElement.innerHTML;
                buttonElement.innerHTML = '‚úÖ';
                setTimeout(() => { buttonElement.innerHTML = originalContent; }, 2000);
            }
        } catch (err) {
            this.showToast('‡πÑ‡∏°‡πà‡∏™‡∏≤‡∏°‡∏≤‡∏£‡∏ñ‡∏Ñ‡∏±‡∏î‡∏•‡∏≠‡∏Å‡πÑ‡∏î‡πâ', 'error');
        }
        document.body.removeChild(textArea);
      }

      copyMessageById(id, buttonElement) {
        const msg = this.state.messages.find(m => m.id === id);
        if (msg) {
            this.copyTextToClipboard(msg.content, '‡∏Ñ‡∏±‡∏î‡∏•‡∏≠‡∏Å‡∏Ç‡πâ‡∏≠‡∏Ñ‡∏ß‡∏≤‡∏°‡∏™‡∏≥‡πÄ‡∏£‡πá‡∏à', buttonElement);
        }
      }
      
      copyAllMessages() {
        const allContent = this.state.messages.map(m => m.content).join('\n\n---\n\n');
        if (allContent) {
            this.copyTextToClipboard(allContent, `‡∏Ñ‡∏±‡∏î‡∏•‡∏≠‡∏Å ${this.state.messages.length} ‡∏Ç‡πâ‡∏≠‡∏Ñ‡∏ß‡∏≤‡∏°‡∏™‡∏≥‡πÄ‡∏£‡πá‡∏à`);
        } else {
            this.showToast('‡πÑ‡∏°‡πà‡∏°‡∏µ‡∏Ç‡πâ‡∏≠‡∏Ñ‡∏ß‡∏≤‡∏°‡πÉ‡∏´‡πâ‡∏Ñ‡∏±‡∏î‡∏•‡∏≠‡∏Å', 'info');
        }
      }

      exportJSON() {
        const data = JSON.stringify(this.state, null, 2);
        const blob = new Blob([data], { type: 'application/json' });
        const url = URL.createObjectURL(blob);
        const a = document.createElement('a');
        a.href = url;
        a.download = `message-backup-${new Date().toISOString().slice(0,10)}.json`;
        a.click();
        URL.revokeObjectURL(url);
        this.showToast('Export ‡∏™‡∏≥‡πÄ‡∏£‡πá‡∏à');
      }

      async importJSON(event) {
        const file = event.target.files?.[0];
        if (!file) return;
        try {
            const text = await file.text();
            const importedState = JSON.parse(text);
            if (!importedState.messages || !importedState.categories) throw new Error("Invalid file format");
            if (confirm('‡∏ï‡πâ‡∏≠‡∏á‡∏Å‡∏≤‡∏£‡πÅ‡∏ó‡∏ô‡∏ó‡∏µ‡πà‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•‡πÄ‡∏î‡∏¥‡∏°‡∏ó‡∏±‡πâ‡∏á‡∏´‡∏°‡∏î‡∏î‡πâ‡∏ß‡∏¢‡πÑ‡∏ü‡∏•‡πå‡∏ó‡∏µ‡πà‡∏ô‡∏≥‡πÄ‡∏Ç‡πâ‡∏≤‡πÉ‡∏ä‡πà‡πÑ‡∏´‡∏°?')) {
                this.state = { ...this.getDefaultState(), ...importedState };
                this.saveState();
                this.render();
                this.showToast('Import ‡∏™‡∏≥‡πÄ‡∏£‡πá‡∏à');
            }
        } catch (e) {
            this.showToast('‡πÑ‡∏ü‡∏•‡πå‡πÑ‡∏°‡πà‡∏ñ‡∏π‡∏Å‡∏ï‡πâ‡∏≠‡∏á‡∏´‡∏£‡∏∑‡∏≠‡πÑ‡∏°‡πà‡∏™‡∏≤‡∏°‡∏≤‡∏£‡∏ñ‡∏≠‡πà‡∏≤‡∏ô‡πÑ‡∏î‡πâ', 'error');
        } finally {
            event.target.value = '';
        }
      }
    }

    const app = new MessageApp();
  </script>
</body>
</html>
